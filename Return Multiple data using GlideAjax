OnChange Client script:--

function onChange(control, oldValue, newValue, isLoading, isTemplate) {
   if (newValue === '') {
	   g_form.setValue('u_caller_manager','');
	   g_form.setValue('description','');
      return;
   }
	
	var caller_mgr = new GlideAjax('CallerManagerSI');
	caller_mgr.addParam('sysparm_name','getCallerDetails');
	caller_mgr.addParam('sysparm_caller',newValue);
	caller_mgr.getXML(result);
	
	function result(response){
		var answer = response.responseXML.documentElement.getAttribute("answer");
		
		var uObj = JSON.parse(answer);
g_form.setValue('u_caller_manager',uObj.manager,uObj.manager_display);
	    g_form.setValue('description',uObj.department);					
		}
	//Type appropriate comment here, and begin script below
   }
   
   
   Script Includes :-
   
   var CallerManagerSI = Class.create();
CallerManagerSI.prototype = Object.extendsObject(AbstractAjaxProcessor, {

	getCallerDetails : function(){
		
		var userid = this.getParameter('sysparm_caller');
		
		var userRec = new GlideRecord('sys_user');
		if(userRec.get(userid)){
			var userObject = {
				"manager":userRec.getValue("manager"),
				"manager_display":userRec.manager.getDisplayValue(),				
        "department":userRec.getValue("department"),
				
				};
			
			return JSON.stringify(userObject);
		}
		
				},
	type:'CallerManagerSI'
    
});
